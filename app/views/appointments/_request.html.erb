<div class="chat_appointment request" data-="appointment-<%= appointment.id %>">
  <div class="appointment-time"><%= appointment.appointment_time %></div>
  <div class="appointment-body"><%= appointment.organizer.first_name %> wants to set an appointment with you.</div>
  <div class="appointment-button">
    <!-- <div class="btn btn-default btn-primary btn-accept">Accept</div> -->
    <%= link_to 'Accept', accept_appointment_path(appointment), class: "elder-button-blue #{'cable' if cable}", method: :post, remote: remote ||= true %>

    <!-- <div class="btn btn-default btn-primary btn-reject">Reject</div> -->
    <%= link_to 'Reject', reject_appointment_path(appointment), class: "btn btn-default btn-primary btn-reject #{'cable' if cable}", method: :post, remote: true %>
  </div>
</div>
