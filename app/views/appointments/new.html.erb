<div class="container">
  <div class="Make an Appointment">
    <%= simple_form_for [@guest, @appointment] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :start_time, as: :string, required: false, label: "Dates", placeholder: "From", input_html: { class: "datepicker" }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, class: "elder-button-blue" %>
      </div>
    <% end %>

    <br>
    <%= link_to 'Back', "#", class: "elder-button-red" %>
  </div>
</div>
