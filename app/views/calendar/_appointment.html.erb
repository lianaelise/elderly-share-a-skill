<% if current_user.id != appointment.organizer_id %>
  <div>
    <div id="cancel" class="student-hours" data-toggle="tooltip" data-placement="top" title = <%= "#{appointment.status}-#{appointment.start_time.to_s(:time)}"%> >
    <p id="cancel-<%= appointment.id %>"><%= link_to "#{appointment.organizer.first_name} #{appointment.organizer.last_name}", user_url(appointment.organizer) %></p>
  </div>
<% else %>
  <div>

    <div id="cancel" class="teacher-hours" data-toggle="tooltip" data-placement="top" title = <%= "#{appointment.status}-#{appointment.start_time.to_s(:time)}"%>>
    <p id="cancel-<%= appointment.id %>"><%= link_to "#{appointment.guest.first_name} #{appointment.guest.last_name}", user_url(appointment.guest) %> </p>
  </div>
<% end %>

